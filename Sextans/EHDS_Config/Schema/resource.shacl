@prefix :         <http://fairdatapoint.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcatap: <http://data.europa.eu/r5r/> .
@prefix healthdcatap: <http://data.europa.eu/healthdcat-ap#> .
@prefix adms: <http://www.w3.org/ns/adms#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dpv: <https://w3id.org/dpv#> .
@prefix eli: <http://data.europa.eu/eli/ontology#> .
@prefix dash:     <http://datashapes.org/dash#> .
@prefix ejp:   <https://w3id.org/ejp-rd/vocabulary#> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .


:ResourceShape a sh:NodeShape ;
  sh:targetClass dcat:Resource ;
  sh:property [
    sh:path dct:title ;
    sh:name "Title" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:TextFieldEditor ;
  ], 
  [
    sh:name "Description" ;
    sh:path dct:description ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    sh:minCount 1 ;   # updated to mandatory
    dash:editor dash:TextAreaEditor ;
  ], 
  [ # new section
    sh:path dcat:landingPage ;
    sh:name "About Page (Landing Page/Homepage)" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], 
  [
    sh:targetClass ejp:VPConnection ;
    sh:name "Indexed by EJP VP? (indexd by default, so only set this if you want to hide this data)" ;
    sh:path ejp:vpConnection ;
    sh:nodeKind sh:IRI ;
    sh:in (<https://w3id.org/ejp-rd/vocabulary#VPInvisible> <https://w3id.org/ejp-rd/vocabulary#VPDiscoverable>) ;
    sh:minCount 0 ;
    sh:maxCount 1 ;
    sh:order 0 ;
#    dash:editor dash:URIEditor ;
    dash:editor dash:EnumSelectEditor ;
    # dash:viewer dash:LabelViewer ;
  ] ,  
  [
    sh:path dcat:theme ;
    sh:name "Ontological Description (enter several relevant ontology terms, for example, ORDO IRI)" ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ],  
  [
    sh:path dcat:keyword ;
    sh:name "Keywords (these will typically mirror the ontological description above)" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LabelViewer ;
  ], 
  [
    sh:path foaf:logo ;
    sh:name "Resource Logo (may be distinct from the Organization that published it)" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ],
  [
    sh:path dcat:version ;
    sh:name "Version" ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
  ],   
  [  # new section
    sh:path dct:identifier ;
    sh:name "Identifier" ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
  ],  
  [
    sh:path dct:language ;
    sh:name "Language (e.g. http://id.loc.gov/vocabulary/iso639-1/en for English)" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    sh:minCount 1 ;  # updated
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], 
  [
    sh:path dct:license ;
    sh:name "License (https://w3id.org/ejp-rd/resources/licenses/v1.0/)" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    sh:minCount 1 ;  # updated
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], 
  [ # new section
    sh:path dct:accessRights ;
    sh:name "Access Rights Document (could use license: https://w3id.org/ejp-rd/resources/licenses/v1.0/)" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ],
  [
    sh:path dct:publisher ;
    sh:name "Publisher (Organization)" ;
    sh:node :OrgShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:BlankNodeEditor ;
  ] , 
  [  # this is a new section, and mandatory
    sh:path dcat:contactPoint ;
    sh:name "Contact Information (should have a contact email)" ;
    sh:node :AgentShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:BlankNodeEditor ;
  ] , 

#   [
#     sh:path dcatap:applicableLegislation ;
#     sh:name "Applicable Legislation" ;
# #    sh:minCount 1 ; # required in EHDS
#     sh:maxCount 1 ;
#     sh:nodeKind sh:IRI ;
#     sh:severity sh:Violation ;
#     sh:message "EHDS resources must have at least one dcatap:applicableLegislation as an IRI" ;
#   ] , 
  [
    sh:path odrl:hasPolicy ;
    sh:name "ODRL Policy - If you have formalized your access conditions in an ODRL policy, link to it here" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ], 
  # [ # new section
  #   sh:path dct:conformsTo ;
  #   sh:name "Conforms to Standard" ;
  #   sh:nodeKind sh:IRI ;
  #   sh:maxCount 1 ;
  #   dash:editor dash:URIEditor ;
  #   dash:viewer dash:LabelViewer ;
  # ], 
  [
    sh:path dct:issued ;
    sh:name "Record Issued" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
  ], 
  [
    sh:path dct:modified ;
    sh:name "Record Modified" ;
    sh:datatype xsd:dateTime ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
  ] .

:OrgShape a sh:NodeShape ;
  sh:targetClass foaf:Organization ;
  sh:property [
    sh:path foaf:name;
    sh:name "Organization Name" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:TextFieldEditor ;
  ] , [
    sh:path dct:description;
    sh:name "Organization Description" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:TextFieldEditor ;
  ] , [
    sh:path foaf:logo ;
    sh:name "Organization Logo" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ] ,  [
    sh:path dcat:landingPage ;
    sh:name "Landing Page" ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ] .

:AgentShape a sh:NodeShape ;  # New section
  sh:targetClass vcard:Agent ;
  sh:property [
    sh:path vcard:url;
    sh:name "URL" ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
  ] .
